{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InstantiateMsg",
  "type": "object",
  "required": [
    "astro_token",
    "owner",
    "refund_recepient"
  ],
  "properties": {
    "astro_token": {
      "description": "Address of ASTRO token",
      "type": "string"
    },
    "owner": {
      "description": "Account who can create new allocations",
      "type": "string"
    },
    "refund_recepient": {
      "description": "Account to receive the refund of unvested tokens if a user terminates allocation",
      "type": "string"
    }
  }
}
